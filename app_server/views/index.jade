extends layout

block content
  .container-fluid
    .row
      .banner
        .container
          .banner-text-container
            .banner-text
              h1 Wahid Rahim
              p developer | blogger | entrepreneur

  #wrapper
    .portfolio.container-fluid
      .row
        .container
          .row
            .col-xs-12
              #portfolio
                // BLACKBOARD
                .item
                  img.img-responsive(src='https://giant.gfycat.com/TerribleOptimalBlackbuck.gif')
                  a(href='http://wahidrahim.com:3000/demo/blackboard', target='_blank')
                    h3 Blackboard
                  #stack
                    i Node.js, Express.js, Socket.io, Fabric.js, CoffeeScript
                  #desc
                    | Real-time multi-user drawing application. Made simply, thanks to Socket.io and Fabric.js.
                  a(href='https://github.com/wahidrahim/blackboard' target='_blank')
                    | https://github.com/wahidrahim/blackboard

                // CARPET
                .item
                  img.img-responsive(src='http://i.imgur.com/qq80zjW.png')
                  a(href='http://carpetblog.herokuapp.com/', target='_blank')
