                  a(href='https://github.com/wahidrahim/Candy-Crash')
                    | https://github.com/wahidrahim/Candy-Crash

                // RESIZE-FONT
                .item
                  img.img-responsive(src='http://i.imgur.com/qsDPtsj.gif')
