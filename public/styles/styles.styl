body
  font-family: lato, sans-serif
  padding-top: 60px

nav.navbar
  padding: 5px

  .navbar-header > a,
  .navbar-nav > li > a
    color: white
    &:hover
      color: cyan

  .navbar-brand
    font-size: 3em
    font-weight: 900

#greeter
  background-image: url(../images/mtns.png)
  background-repeat: no-repeat
  background-size: cover
  height: 500px
  background-color: #000
  color: #fff
  h1
    font-weight: 900
  #title
    position: absolute
    right: 0px
    bottom: -420px


#portfolio
  background-color: #363434
  min-height: 100% !important
  h1
    color #fff

.portfolio
  display: block
  overflow: visible
  margin-bottom: 20px
  min-height: 420px !important

.portfolio:after
  content: ' '
  display: block
  clear: both

.project
  img, video
    max-width: 350px

  *
    margin: 0
    padding: 0

  p
    color: #777777
  // temp
  border: 1px solid #DADADA 
  padding: 10px
  background-color: #fff

  h3
    font-weight: bold
  a
    font-size: 1.2em

#skills
  height: 100%
  background-color: #eee
  padding-bottom: 10px

#portfolio h1,
#skills h1,
#contact h1
  font-weight: 900
h1.portfolio,
h1.skills,
h1.contact
  font-weight: 900

#contact-form
  margin: 0 auto
  width: 720px

#wrap
  min-height: 100%
  height: auto
  margin: 0 auto -60px
  padding: 0 0 60px

#footer
  bottom: 0
  margin-top: 10px
  width: 100%
  height: 60px
  padding-top: 20px
  background-color: black
  color: lightgray

#skills
  background: #ddd

.progress
  background-color: #333

  .progress-bar
    background-color: cyan
    background-image -webkit-linear-gradient(top, rgba(255, 255, 255, .25), rgba(0, 0, 0, .25)), -webkit-linear-gradient(left, #00ffff, #0099ff)
