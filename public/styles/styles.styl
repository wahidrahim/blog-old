body
  font-family: lato, sans-serif
  padding-top: 60px

#wrap
  min-height 100%
  height auto
  margin 0 auto -60px
  padding 0 0 60px

nav.navbar
  padding: 5px

  .navbar-header > a,
  .navbar-nav > li > a
    color: white
    &:hover
      color: cyan

  .navbar-brand
    font-size: 3em
    font-weight: 900

#greeter
  height: 500px
  background-color: #000
  h1
    color: #fff
    font-weight: 900

#projects
  height: 100%
  padding-bottom: 20px

.project
  background-color: #f0f

#skills
  height: 100%
  background-color: #eee
  padding-bottom: 10px

h1.projects,
h1.skills,
h1.contact
  font-weight: 900

#footer
  position: fixed
  height: 50px
  padding-top: 15px
  background-color: black
  color: lightgray
  width: 100%
  bottom: 0
