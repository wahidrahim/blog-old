  #contact-top
  #contact-container
    .container
      #contact
        h1.text-center Contact me
        .col-xs-12
          form#contact-form(role='form', data-toggle='validator', data-disable='false')
            fieldset
            .form-group
              input#name.form-control(placeholder='Name', required)
              .help-block.with-errors
            .form-group
              input#email.form-control(type='email', placeholder='Email', data-error='invalid email', required)
              .help-block.with-errors
            .form-group
              textarea#message.form-control(placeholder='Message', rows=5, required)
              .help-block.with-errors
            .form-group
              button#submit.btn.btn-primary.btn-block(type='submit') Send

  #footer
